<Window x:Class="Weather_Data.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_Data"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="41,53,0,0" TextWrapping="Wrap" Text="Upload File" VerticalAlignment="Top" Width="498" Name="FileNameTextBox"/>
        <Button x:Name="Browse" Content="Browse" HorizontalAlignment="Left" Margin="544,53,0,0" VerticalAlignment="Top" Width="80" Height="23" Click="Browse_Click"/>
        <Border BorderThickness="1" Width="453" Margin="41,81,0,5" HorizontalAlignment="Left" BorderBrush="Black">
            
            <ScrollViewer>
                <TextBlock HorizontalAlignment="Left" 
                       TextWrapping="Wrap" Width="453" Name="PreviewTextBlock" />
            </ScrollViewer>
        </Border>
        <Label Content="Result" HorizontalAlignment="Left" Margin="512,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.437,-0.016" Name="ResultLabel" FontWeight="Bold"/>

    </Grid>
</Window>
